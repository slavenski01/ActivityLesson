<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nav_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nav_MAIN"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_to_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nav_main" />

    <Button
        android:id="@+id/btn_go_to_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_to_result" />

</androidx.constraintlayout.widget.ConstraintLayout>